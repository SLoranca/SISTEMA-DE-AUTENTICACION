@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SAAUR | Crear Cuenta</title>
    <meta name="description" content="Seven admin dashboard live demo. Check out all the features of the admin panel. Light &amp; dark skins. A large number of settings, additional services and widgets." />
    <meta name="keywords" content="Seven, bootstrap, bootstrap 5, dmin themes, free admin themes, bootstrap admin, bootstrap dashboard" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta charset="utf-8" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:type" content="article" />
    <meta property="og:title" content="Seven HTML Free - Bootstrap 5 HTML Multipurpose Light/Dark Admin Dashboard Theme" />
    <meta property="og:url" content="https://keenthemes.com/products/seven-html-pro" />
    <meta property="og:site_name" content="Keenthemes | Seven HTML Free" />
    <link rel="canonical" href="Https://preview.keenthemes.com/seven-html-free" />
    <link rel="shortcut icon" href="assets/media/logos/favicon.ico" />
    <!--begin::Fonts-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" />
    <!--end::Fonts-->
    <link href="~/assets/plugins/global/plugins.bundle.css" rel="stylesheet" />
    <link href="~/assets/css/style.bundle.css" rel="stylesheet" />
    <link href="~/lib/sweet-alert/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/css/animate.css" rel="stylesheet" />
</head>
<!--begin::Body-->
<body id="kt_body" class="bg-body">
    <div class="d-flex flex-row">
        <div class="d-flex flex-column flex-row-fluid">
            <div class="d-flex flex-column-auto h-100px flex-center mb-5" style="background: url('../assets/media/patterns/pattern-1.jpg')">
                <h2 class="text-white">Crear Cuenta</h2>
            </div>
            <div class="d-flex flex-row flex-column-fluid">
                <div class="d-flex flex-row-fluid flex-center">
                    <div class="card w-50 shadow-sm animated fadeInDown">
                        <div class="card-body">
                            <form class="form" id="Form" novalidate>
                                <div class="row mb-5">
                                    <div class="col-lg-4">
                                        <label class="form-label">Nombre(s)</label>
                                        <input type="text" class="form-control letter" placeholder="Nombre(s)" name="name" id="txtName" autocomplete="off" required />
                                    </div>
                                    <div class="col-lg-4">
                                        <label class="form-label">Apellido paterno</label>
                                        <input type="text" class="form-control letter" name="p_last_name" placeholder="Apellido paterno" id="txtPLastName" autocomplete="off" required />
                                    </div>
                                    <div class="col-lg-4">
                                        <label class="form-label">Apellido materno</label>
                                        <input type="text" class="form-control letter" placeholder="Apellido materno" name="m_last__name" id="txtMLastName" autocomplete="off" required />
                                    </div>
                                </div>
                                <div class="row mb-5">
                                    <div class="col-lg-12">
                                        <label class="form-label">Correo electrónico</label>
                                        <input type="email" class="form-control" placeholder="Dirección de correo electrónico" maxlength="255" name="email" autocomplete="off" id="txtEmail" required />
                                    </div>
                                </div>
                                <div class="row mb-5">
                                    <div class="col-lg-12">
                                        <label class="form-label">Contraseña</label>
                                        <input type="password" class="form-control" placeholder="**************" maxlength="255" name="password" id="txtPassword" required />
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="card-footer">
                            <div class="row text-center">
                                <div class="col-lg-12">
                                    <a href="@Url.Action("Login","Account")" class="btn btn-sm btn-secondary mb-3">Volver</a>
                                    <button type="button" id="btnCreateAccount" onclick="create_account();" class="btn btn-sm btn-primary mb-3">Crear Cuenta</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/sweet-alert/sweetalert2.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/js/_config.js"></script>
    <script src="~/js/_tools.js"></script>
    <script src="~/js/account/create.js"></script>
</body>
</html>